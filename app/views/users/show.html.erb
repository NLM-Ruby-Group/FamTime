<div>
  <ul class="nav nav-tabs" style="margin-top:80px;">
    <li class="nav-item"> 
      <a class="nav-link <%= 'active' if params[:session] == 'account' %>"> Manage Account </a> 
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:session] == 'events' %>"> My Events </a> 
    </li>
  </ul>
</div>

<div> 
  <div class="row">

    <div class="col"> 
     <%= form_for @user do |f| %>
       <% if @user.errors.size > 0 %>
         <div class="alert alert-danger">
           <%= @user.errors.full_messages.to_sentence %>
         </div>
       <% end %>
       <div class="form-group">
         <%= f.label :first_name %>
         <%= f.text_field :first_name, class: 'form-control'%>
       </div>
       <div class="form-group">
         <%= f.label :last_name %>
         <%= f.text_field :last_name, class: 'form-control'%>
       </div>
       <div class="form-group">
         <%= f.label :email %>
         <%= f.text_field :email, class: 'form-control'%>
       </div>
       <div class="form-group">
         <%= f.label :address%>
         <%= f.text_field :address, class: 'form-control'%>
       </div>
       <div class="form-group">
         <%= f.label "Phone"%>
         <%= f.text_field :tel, class: 'form-control'%>
       </div>

       <%= f.submit "Change", class: 'btn btn-outline-success' %>
     <% end %>
    </div>

    <div class="col">
      <div class="card" style="width:15rem;"> 
        <img class="card-img-top" src="<%= @current_user.photo.nil? ? default_user_image : @current_user.photo %>" style="width:238px; height:180px;" alt="Card image cap" >
        <div class="card-block">
          <a class="btn btn-primary"> add image</a>
        </div>
      </div>
    </div> 

  </div>

</div> 
