<div class="container"> 
<%= link_to 'Back', events_path,class:"btn btn-primary btn-sm"%>
<%= link_to 'Edit', edit_event_path,class:"btn btn-info btn-sm"%>
<div class="event-details">
  <h1> <%= @event.name %></h1>
  <%# CHANGE TO DISPLAY NAME F AUTHOR AND NOT ID%>
  <h3> Created by: <%= @event.user.first_name.to_s %> <%= @event.user.last_name.to_s %></h3>
  <p> Date: <%= @event.starts_at %> || <%= @event.ends_at %> </p>
  <p> Location: <%= @event.place.address %> </p>
  <p> Price: <%= number_to_currency(@event.price, unit: 'VND ', precision: 0) %> </p>
</div>
  <img src="<%= @event.image %>" alt="">
  <div class="event-description">
    <p> <%= @event.description %> </p>
  </div>


<!-- CREATE COMMENTS -->
<% if current_user %>
  <%= form_for([@event,@event.comments.build]) do |f| %>
    <%= f.label :user_id %>
    <%= f.text_field :user_id, value: current_user.first_name.to_s current_user.last_name.to_s, disabled:true %>
    <%= f.label :body %>
    <%= f.text_area :body, class:'form-control' %>
    <%= f.submit %>
  <% end %> <!-- end form-->

<% else %>
  <%= link_to 'To comment, please log in', new_session_path %>
<% end %> <!-- end if -->



<!-- DISPLAY COMMENTS -->
<div class="row">
<% if @comments.empty? %>
      <p> No comments </p>
<% else %>        
      <% @comments.each do |comment| %>
      <div class="card card-block">
      <div class="card-title">
        <p> Username </p>
      </div>
        <div class="card-description">
          <%= comment.body %>
        </div>
      </div>
          
        <% end %>
<% end %>
</div> <!-- end row -->



</div>