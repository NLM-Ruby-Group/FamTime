<div class="container">
  <div class="row">
  <% if @events.empty? %>
      <h1>  Sorry,there are no events available, but you can start by <%= link_to "adding a new event", new_event_path, class: 'btn btn-outline-success'%> </h1>
    <% else %>
      <h1>There are currently <%= @events.size %> events available.<br> You can help us by <%= link_to "adding a new event", new_event_path, class: 'btn btn-outline-success'%></h1>
    <% @events.each do |g| %>
      <%= render partial: 'card', locals: {event:g} %>
    <% end %>
    <% end %>
  </div>
</div>


