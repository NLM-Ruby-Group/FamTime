<div class='col-12 col-sm-6'>
  <%= link_to event_path(event) do %>

  <div class="card">
    <div class="card-top" style='background:url(<%= event.image.url %>)'>
      <span>  Created by: <%= link_to 'Profile',user_path(id: event.user.id) %> <%= event.user.last_name.to_s %></span>
      
      <button type="button" class="btn btn-primary"> Going?</button>

      <h3> <%= number_to_currency(event.price, unit: 'VND ', precision: 0) %></h3>
      
    </div>

    <div class="card-bottom">
      <div class="card-info-1">
        <h1> <%= event.name %></h1>
        <p> <%= event.place.address %>
      </div>
      <div class="card-info-2">
        <h6> <i class="fa fa-calendar-check-o" aria-hidden="true"></i><%= event.starts_at.strftime("%F")%> ||<%= event.ends_at.strftime("%F") %></h6>   
        <p> <i class="fa fa-user" aria-hidden="true"></i>
        <%= event.min_participants %> -- <%= event.max_participants %>
         </p>
         
      </div>
    </div>
  
  </div>


    <% end %>

</div>



