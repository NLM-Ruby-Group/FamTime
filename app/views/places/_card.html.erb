<div class='col-12 col-sm-6'>
  <%= link_to place_path(place) do %>
    <div class="card">
      <%= image_tag place.image.url,class:'card-img-top' %>
      <div class="card-block">
        <h4 class="card-title"> <%= place.name %></h4>
        <h6 class="card-subtitle"> <%= place.address %> <br> <%= place.opening_hours.strftime("%H : %M") %> || <%= place.closing_hours.strftime("%H : %M") %> </h6>
        <%#
        <p class="card-text"> <%= place.description %.</p>
        %>
      </div>
    </div>
    <% end%>

</div>