<div class="container">
  <div class="row">
    <% if @places.empty? %>
      <h1>  Sorry,there are no places available, but you can start by <%= link_to "adding a new location", new_place_path, class: 'btn btn-outline-success'%> </h1>
    <% else %>
      <h1>There are currently <%= @places.size %> locations available.<br> You can help us by <%= link_to "adding a new location", new_place_path, class: 'btn btn-outline-success'%></h1>
    <% @places.each do |g| %>
      <%= render partial: 'card', locals: {place:g} %>
    <% end %>
    <% end %>
  </div>
</div>

